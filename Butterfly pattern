#include <iostream>

using namespace std;

int main()
{
    int row=3, column=7, n=4;
    for(int i=0;i<4;i++)
    {
        for(int j=0;j<8;j++)
        {
            if(j>=column || j<=i){
            cout<<"*";
            }
            else 
            cout<<" ";
        }
       column--;
        cout<<"\n";
    }
    
    for(int i=0;i<4;i++)
    {
        for(int j=0;j<8;j++)
        {
            if(j<=row || j>=n){
            cout<<"*";
            }

            else 
            cout<<" ";
        }
       row--;
       n++;
        cout<<"\n";
    }

    return 0;
}


